<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/title_comm" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2" >

                <LinearLayout
                    android:id="@+id/ll_zz"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/green"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp" >

                    <TextView
                        android:id="@+id/tv_cprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="234.00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp20" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_zzzd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="+12%"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp18" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/sgray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今开:"
                            android:textColor="@color/sblack"
                            android:textSize="@dimen/sp16" />

                        <TextView
                            android:id="@+id/tv_todayopen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2441.09"
                            android:textColor="@color/sblack"
                            android:textSize="@dimen/sp16" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="昨收:"
                            android:textColor="@color/sblack"
                            android:textSize="@dimen/sp16" />

                        <TextView
                            android:id="@+id/tv_yesopen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2441.09"
                            android:textColor="@color/sblack"
                            android:textSize="@dimen/sp16" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/sgray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评级:"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A级"
                    android:textSize="@dimen/sp12" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/sgray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:weightSum="3" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="vertical" >
<!--                     android:gravity="center" -->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="最高:"
                            android:textColor="@color/sblack"
                            android:textSize="@dimen/sp12" />

                        <TextView
                            android:id="@+id/tv_hight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2441.09"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="成交量:"
                            android:textColor="@color/sblack"
                            android:textSize="@dimen/sp12" />

                        <TextView
                            android:id="@+id/tv_turnover"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2441.09"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="资金流入:"
                            android:textColor="@color/sblack"
                            android:textSize="@dimen/sp12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2441.09"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp12" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/sgray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
					android:layout_marginLeft="8dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="最低:"
                            android:textColor="@color/sblack"
                            android:textSize="@dimen/sp12" />

                        <TextView
                            android:id="@+id/tv_lowest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2441.09"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="成交额:"
                            android:textColor="@color/sblack"
                            android:textSize="@dimen/sp12" />

                        <TextView
                            android:id="@+id/tv_turnovere"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2441.09"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="资金流出:"
                            android:textColor="@color/sblack"
                            android:textSize="@dimen/sp12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2441.09"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp12" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/sgray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="振幅:"
                            android:textColor="@color/sblack"
                            android:textSize="@dimen/sp12" />

                        <TextView
                            android:id="@+id/tv_zf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2441.09"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="库存量:"
                            android:textColor="@color/sblack"
                            android:textSize="@dimen/sp12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2441.09"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="净额:"
                            android:textColor="@color/sblack"
                            android:textSize="@dimen/sp12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2441.09"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp12" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/sgray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp" >

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="@drawable/bg_kline"
                    android:orientation="horizontal"
                    android:padding="0.2dp"
                    android:weightSum="3" >

                    <RadioButton
                        android:id="@+id/rb_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/sele_bg"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="分时"
                        android:textColor="@color/klin_color"
                        android:textSize="@dimen/sp14" />

                    <View
                        android:layout_width="0.2dp"
                        android:layout_height="match_parent"
                        android:background="@color/red" />

                    <RadioButton
                        android:id="@+id/rb_dayk"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/sele_bg"
                        android:button="@null"
                        android:gravity="center"
                        android:text="日K"
                        android:textColor="@color/klin_color"
                        android:textSize="@dimen/sp14" />

                    <View
                        android:layout_width="0.2dp"
                        android:layout_height="match_parent"
                        android:background="@color/red" />

                    <RadioButton
                        android:id="@+id/rb_weekk"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/sele_bg"
                        android:button="@null"
                        android:gravity="center"
                        android:text="周K"
                        android:textColor="@color/klin_color"
                        android:textSize="@dimen/sp14" />
                </RadioGroup>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp" >

                <!-- <com.android.futures.view.KChartsView
                    android:id="@+id/my_charts_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" /> -->

                <com.android.futures.view.TimesView
                    android:id="@+id/my_fenshi_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_vol"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="162dp">
                    <cn.limc.androidcharts.view.MACandleStickChart
                        android:id="@+id/macandlestickchart"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:visibility="gone" />

                    <cn.limc.androidcharts.view.MACandleStickChart
                        android:id="@+id/macandlestickchartweek"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:visibility="gone" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp" >
						
                        <com.femto.post.customview.ViewVOL
                            android:id="@+id/my_charts_viewweek"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible" />
                        <com.femto.post.customview.ViewVOL
                            android:id="@+id/my_charts_viewweek_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal" >

                        <RadioGroup
                            android:id="@+id/rg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:background="@drawable/bg_kline"
                            android:orientation="horizontal"
                            android:padding="0.2dp"
                            android:weightSum="4" >

                            <RadioButton
                                android:id="@+id/rb_vol"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/sele_bg"
                                android:button="@null"
                                android:gravity="center"
                                android:text="VOL"
                                android:textColor="@color/klin_color"
                                android:textSize="@dimen/sp14" />

                            <View
                                android:layout_width="0.2dp"
                                android:layout_height="match_parent"
                                android:background="@color/red" />

                            <RadioButton
                                android:id="@+id/rb_macd"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/sele_bg"
                                android:button="@null"
                                android:gravity="center"
                                android:text="MACD"
                                android:textColor="@color/klin_color"
                                android:textSize="@dimen/sp14" />

                            <View
                                android:layout_width="0.2dp"
                                android:layout_height="match_parent"
                                android:background="@color/red" />

                            <RadioButton
                                android:id="@+id/rb_kdj"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/sele_bg"
                                android:button="@null"
                                android:gravity="center"
                                android:text="KDJ"
                                android:textColor="@color/klin_color"
                                android:textSize="@dimen/sp14" />

                            <View
                                android:layout_width="0.2dp"
                                android:layout_height="match_parent"
                                android:background="@color/red" />

                            <RadioButton
                                android:id="@+id/rb_rsi"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/sele_bg"
                                android:button="@null"
                                android:gravity="center"
                                android:text="RSI"
                                android:textColor="@color/klin_color"
                                android:textSize="@dimen/sp14" />
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/sgray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评级"
                    android:textColor="@color/sblack"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="A级——高风险。Peter（每日更新）"
                    android:textSize="@dimen/sp12" />
            </LinearLayout>
			
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/sgray" />
            
            <cn.limc.androidcharts.view.PieChart
                android:id="@+id/piechart"
                android:layout_width="match_parent"
                android:layout_height="200dip" />
		
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/sgray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="近10日资金流向图"
                android:textSize="@dimen/sp12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:background="@color/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="资金流入"
                        android:textColor="@color/sblack"
                        android:textSize="@dimen/sp10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_marginLeft="32dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:background="@color/green" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="资金流出"
                        android:textColor="@color/sblack"
                        android:textSize="@dimen/sp10" />
                </LinearLayout>
            </LinearLayout>

            <com.femto.post.customview.DoubleHistogram
                android:id="@+id/dh"
                android:layout_width="match_parent"
                android:layout_height="300dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>